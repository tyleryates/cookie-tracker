{
  "compilerOptions": {
    // Type-checking only (tsup handles compilation)
    "noEmit": true,
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],

    // Module resolution
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    // Type checking â€” strict
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    // JSX support (Preact)
    "jsx": "react-jsx",
    "jsxImportSource": "preact",

    // Other options
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "release",
    "docs",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
