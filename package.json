{
  "name": "cookie-tracker",
  "version": "1.2.0",
  "description": "Girl Scout Cookie Inventory and Order Tracker",
  "main": "dist/main.js",
  "scripts": {
    "compile": "(tsc || true) && cp src/index.html src/styles.css dist/",
    "start": "npm run compile && electron .",
    "build": "npm run compile && electron-builder --mac",
    "build:win": "npm run compile && electron-builder --win"
  },
  "keywords": [
    "girl-scouts",
    "cookies",
    "inventory",
    "electron",
    "desktop-app"
  ],
  "author": "Tyler Yates",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "axios": "^1.13.4",
    "axios-cookiejar-support": "^6.0.5",
    "cheerio": "^1.2.0",
    "electron-updater": "^6.1.7",
    "tippy.js": "^6.3.7",
    "tough-cookie": "^6.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/electron": "^1.4.38",
    "@types/node": "^25.2.2",
    "electron": "^40.1.0",
    "electron-builder": "^26.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.gscookies.tracker",
    "productName": "Cookie Tracker",
    "publish": {
      "provider": "github",
      "owner": "tyleryates",
      "repo": "cookie-tracker",
      "releaseType": "release"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "electronLanguages": [
      "en",
      "en-US"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": "zip"
    },
    "win": {
      "icon": "build/icon.ico.png",
      "target": "zip"
    }
  }
}
