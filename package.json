{
  "name": "cookie-tracker",
  "version": "1.9.4",
  "description": "Girl Scout Cookie Inventory and Order Tracker",
  "main": "dist/main.js",
  "scripts": {
    "compile": "tsup",
    "typecheck": "tsc --noEmit",
    "start": "tsup && electron .",
    "build": "tsup && electron-builder --mac",
    "build:win": "tsup && electron-builder --win",
    "test": "vitest run"
  },
  "keywords": [
    "girl-scouts",
    "cookies",
    "inventory",
    "electron",
    "desktop-app"
  ],
  "author": "Tyler Yates",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.13.4",
    "axios-cookiejar-support": "^6.0.5",
    "cheerio": "^1.2.0",
    "electron-updater": "^6.1.7",
    "exceljs": "^4.4.0",
    "preact": "^10.28.3",
    "tough-cookie": "^6.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/archiver": "^7.0.0",
    "@types/electron": "^1.4.38",
    "@types/node": "^25.2.2",
    "electron": "^40.1.0",
    "electron-builder": "^26.0.0",
    "knip": "^5.83.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.gscookies.tracker",
    "productName": "Cookie Tracker",
    "publish": {
      "provider": "github",
      "owner": "tyleryates",
      "repo": "cookie-tracker",
      "releaseType": "release"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "electronLanguages": [
      "en",
      "en-US"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.inherit.plist",
      "notarize": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico.png",
      "target": "zip"
    }
  },
  "packageManager": "pnpm@10.7.0+sha512.6b865ad4b62a1d9842b61d674a393903b871d9244954f652b8842c2b553c72176b278f64c463e52d40fff8aba385c235c8c9ecf5cc7de4fd78b8bb6d49633ab6",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
